<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cvContacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/frank_mib"
            android:background="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorAccent">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dog_bone_50"
                />

            <TextView
                android:id="@+id/tvNombreCV"
                android:layout_width="@dimen/ancho_texto_cardview"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textSize="@dimen/texto_cardview"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/tvNumeroLikeCV"
                android:layout_width="@dimen/ancho_numero_like"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/texto_cardview"
                android:textColor="@color/colorPrimaryText"
                />

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/dog_bone_48"/>







        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>