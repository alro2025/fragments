<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cvPerfil"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto2"
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:src="@drawable/salem"
            android:background="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:background="@color/colorAccent">

            <ImageButton
                android:id="@+id/btnLike2"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/dog_bone_50"
                />

            <TextView
                android:id="@+id/tvNombreCV2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="salem"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/tvNumeroLikeCV2"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="15dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimaryText"
                />

            <ImageView
                android:id="@+id/imgLike2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dog_bone_48"/>







        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>